<section class="golfball-grading">
    <div class="container">
        <div class="golfball-grading-content">
            <h3> {{ page.title }} </h3>
            {{ page.content }}
            <div class="row">
                {% for block in section.blocks %}
                    <div class="col-md-4">
                        <div class="golfball-grade-col">
                            <div class="golfball-grade-img">
                                <img loading="lazy" src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
                            </div>
                            <div class="golf-grade-list">
                                <h4>{{ block.settings.heading }}</h4>
                                <ul>
                                    {{ block.settings.content }}
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
   "name": "Golden Ball Grading",
   "settings":[],
   "blocks" :
   [
        {
            "name" : "Grading",
            "type" : "grading",
            "limit" : 3,
            "settings" :
            [
               {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
               },
                {
                 "type": "text",
                 "id": "heading",
                 "label": "Heading"
                },
                {
                 "type": "html",
                 "id": "content",
                 "label": "Features"
                }
            ]
        }
   ]
}
{% endschema %}