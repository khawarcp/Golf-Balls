{
   "name": "Three Collections",
    "settings":
    [
        {
           "type": "header",
           "content": "Collections 1"
        },
       {
        "type": "image_picker",
        "id": "collection_1_image",
        "label": "Image"
       },    
       {
        "type": "text",
        "id": "heading_1_text",
        "label": "Heading",
        "default": "GLOVES"
       },
       {
        "type": "text",
        "id": "subheading_1_text",
        "label": "Subheading",
        "default": "PERFORMANCE"
       },
       {
        "type": "url",
        "id": "button_1_url",
        "label": "URL"
       },
       {
            "type": "header",
            "content": "Collections 2"
        },
        {
            "type": "image_picker",
            "id": "collection_2_image",
            "label": "Image"
        },    
        {
            "type": "text",
            "id": "heading_2_text",
            "label": "Heading",
            "default": "DIVOT TOOLS "
        },
       {
        "type": "text",
        "id": "subheading_2_text",
        "label": "Subheading"
       },
        {
            "type": "url",
            "id": "button_2_url",
            "label": "URL"
        },
        {
             "type": "header",
             "content": "Collections 3"
         },
         {
             "type": "image_picker",
             "id": "collection_3_image",
             "label": "Image"
         },    
         {
             "type": "text",
             "id": "heading_3_text",
             "label": "Heading",
             "default": "SHOP TEES"
         },
       {
        "type": "text",
        "id": "subheading_3_text",
        "label": "Subheading"
       },
         {
             "type": "url",
             "id": "button_3_url",
             "label": "URL"
         }
    ],
    "presets":
    [ 
          {
             "name": "Three Collections Banners",
             "category" : "Custom Sections"
          }
    ]
}
{% endschema %}