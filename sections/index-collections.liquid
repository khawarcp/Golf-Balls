<section class="three-products-collection">
    <div class="container">
        <div class="three-products-row">
            <a href="{{ section.settings.button_1_url   | default : 'javascript:void(0)' }}" class="performance-gloves symmetry" loading="lazy" style="background-image: url('{{ section.settings.collection_1_image | img_url : 'master' }}')">
                <h2> {{ section.settings.heading_1_text }} </h2>
                <h3> {{ section.settings.subheading_1_text }} </h3>                
            </a>
            <a href="{{ section.settings.button_2_url  | default : 'javascript:void(0)' }}" class="performance-gloves symmetry" loading="lazy" style="background-image: url('{{ section.settings.collection_2_image | img_url : 'master' }}')">
                <h2> {{ section.settings.heading_2_text }} </h2>
                <h3> {{ section.settings.subheading_2_text }} </h3>                
            </a>
            <a href="{{ section.settings.button_3_url | default : 'javascript:void(0)' }}" class="performance-gloves symmetry" loading="lazy" style="background-image: url('{{ section.settings.collection_3_image | img_url : 'master' }}')">
                <h2> {{ section.settings.heading_3_text }} </h2>
                <h3> {{ section.settings.subheading_3_text }} </h3>                
            </a>
        </div>
    </div>
</section>

